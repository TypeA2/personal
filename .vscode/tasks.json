{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "dependsOn": [ "clean" ],
            "command": "bundle",
            "args": [
                "exec", "jekyll", "build",
                "--destination", "/var/www/html"
            ]
        },
        {
            "label": "stage",
            "type": "shell",
            "command": "bundle",
            "args": [
                "exec", "jekyll", "serve",
                "watch"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-r", "/var/www/html"
            ]
        }
    ]
}
