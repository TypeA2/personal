{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "bundle",
            "args": [
                "exec", "jekyll", "build",
                "--lsi",
                "--destination", "/var/www/html"
            ]
        },
        {
            "label": "stage",
            "type": "shell",
            "command": "bundle",
            "args": [
                "exec", "jekyll", "serve",
                "--lsi",
                "--host", "192.168.17.15",
                "watch"
            ]
        }
    ]
}
